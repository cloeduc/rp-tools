<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CDuc\MainBundle\Entity\Personnage" table="personnage">
    <indexes>
      <index name="fk_personnage_joueur1_idx" columns="joueur_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="firstname" type="string" column="firstname" length="45" nullable="true"/>
    <field name="lastname" type="string" column="lastname" length="45" nullable="true"/>
    <field name="nickname" type="string" column="nickname" length="45" nullable="true"/>
    <field name="background" type="blob" column="background" nullable="true"/>
    <field name="description" type="blob" column="description" nullable="true"/>
    <field name="publicStory" type="blob" column="public_story" nullable="true"/>
    <field name="isCompleted" type="boolean" column="is_completed" nullable="true"/>
    <many-to-one field="joueur" target-entity="Joueur">
      <join-columns>
        <join-column name="joueur_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
