{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Personnage</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ entity.nickname }}</td>
            </tr>
            <tr>
                <th>Background</th>
                <td>{{ entity.background }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Publicstory</th>
                <td>{{ entity.publicStory }}</td>
            </tr>
            <tr>
                <th>Iscompleted</th>
                <td>{{ entity.isCompleted }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('personnage') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('personnage_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
